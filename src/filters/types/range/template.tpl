<div class="field__sort js-sort t-label" title="Sort by ${label}">
  <span class="field__sort-text js-sort">${label}</span>
  <span class="field__sort-icon js-sort is-${order}"></span>
</div>
<div class="field__filter">
  <span class="field-range__text t-hint">From</span>
  <input class="field-range__input t-input js-from" type="text" value="${fromText}" title="Set minimum ${label}"/>
  <span class="field-range__text t-hint">To</span>
  <input class="field-range__input t-input js-to" type="text" value="${toText}" title="Set maximum ${label}"/>
  <span class="field__filter-reset t-btn js-reset" title="Reset ${label} filter"></span>
</div>
